{
    "name": "paynl/shopware-plugin",
    "description": "Pay.nl Shopware Plugin",
    "version": "v1.0.0",
    "type": "shopware-platform-plugin",
    "extra": {
        "shopware-plugin-class": "PaynlPayment\\PaynlPayment",
        "plugin-icon": "src/Resources/public/plugin.png",
        "label": {
            "de-DE": "Pay.nl payment",
            "en-GB": "Pay.nl payment"
        },
        "description": {
            "de-DE": "Pay.nl Payment Shopware Plugin",
            "en-GB": "Pay.nl Payment Shopware Plugin"
        },
        "hooks": {
          "pre-push": [
            "composer lint"
          ]
        }
    },
    "require": {
        "paynl/sdk": "^1.5"
    },
    "license": "MIT",
    "authors": [
        {
              "name": "Pay.nl dev team",
              "email": "support@pay.nl"
        }
    ],
    "autoload": {
        "psr-4": {
            "PaynlPayment\\": "src/",
            "Paynl\\": "vendor/paynl/sdk/src/",
            "Curl\\": "vendor/php-curl-class/php-curl-class/src"
        }
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpstan/phpstan": "0.10.3",
        "thecodingmachine/phpstan-strict-rules": "^0.10.3",
        "squizlabs/php_codesniffer": "^3.3",
        "phpunit/phpunit": "^7",
        "brainmaestro/composer-git-hooks": "^2.8"
    },
    "scripts": {
      "lint": "docker-compose run php-cli-container bash -c \"p=./custom/plugins/PaynlPayment && \"$p\"/vendor/bin/parallel-lint \"$p\"/src && \"$p\"/vendor/bin/phpcs -p \"$p\"/src --standard=PSR2 && \"$p\"/vendor/bin/phpstan analyse -c \"$p\"/phpstan.neon -l max \"$p\"/src\"",
      "fix": "docker-compose run php-cli-container bash -c \"p=./custom/plugins/PaynlPayment && \"$p\"/vendor/bin/phpcbf \"$p\"/src --standard=PSR2\"",
      "post-install-cmd": "cghooks add --ignore-lock",
      "post-update-cmd": "cghooks update",
      "cghooks": "cghooks",
      "tests": "docker-compose run php-cli-container bash -c  \"p=./custom/plugins/PaynlPayment && \"$p\"/vendor/bin/phpunit -c \"$p\"/phpunit.xml.dist --no-coverage\"",
      "tests-coverage": "docker-compose run php-cli-container bash -c  \"p=./custom/plugins/PaynlPayment && \"$p\"/vendor/bin/phpunit -c \"$p\"/phpunit.xml.dist \""
    }
}
